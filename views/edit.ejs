<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/diary/<%= diary._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea type="text" class="form-control" rows="7" name="content"><%=diary.content%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div> 
            </form>
            <a href="/diary">Go Back</a>
        </div>
    </div>
</div>

